<% /* Edit Inventory — same layout as Add, but pre-filled and posts to /inv/update */ %>

<h1><%= title %></h1>

<%- messages() %>

<% if (typeof errors !== "undefined" && errors && errors.length) { %>
  <div class="form-errors" role="alert" aria-live="assertive">
    <ul>
      <% errors.forEach(function(err){ %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form id="updateForm" class="auth-form" action="/inv/update" method="post" novalidate>
  <div class="form-grid">
    <div class="form-row">
      <label for="inv_make">Make</label>
      <input id="inv_make" name="inv_make" type="text" required value="<%= (locals.inv_make || inv_make) %>">
    </div>

    <div class="form-row">
      <label for="inv_model">Model</label>
      <input id="inv_model" name="inv_model" type="text" required value="<%= (locals.inv_model || inv_model) %>">
    </div>

    <div class="form-row">
      <label for="inv_year">Year</label>
      <input id="inv_year" name="inv_year" type="number" min="1900" max="2100" required value="<%= (locals.inv_year || inv_year) %>">
    </div>

    <div class="form-row full">
      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" rows="4" required><%= (locals.inv_description || inv_description) %></textarea>
    </div>

    <div class="form-row">
      <label for="inv_image">Image Path</label>
      <input id="inv_image" name="inv_image" type="text" required value="<%= (locals.inv_image || inv_image || '/images/vehicles/no-image.png') %>">
    </div>

    <div class="form-row">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input id="inv_thumbnail" name="inv_thumbnail" type="text" required value="<%= (locals.inv_thumbnail || inv_thumbnail || '/images/vehicles/no-image-tn.png') %>">
    </div>

    <div class="form-row">
      <label for="inv_price">Price (USD)</label>
      <input id="inv_price" name="inv_price" type="number" step="0.01" min="0" required value="<%= (locals.inv_price || inv_price) %>">
    </div>

    <div class="form-row">
      <label for="inv_miles">Miles</label>
      <input id="inv_miles" name="inv_miles" type="number" step="1" min="0" required value="<%= (locals.inv_miles || inv_miles) %>">
    </div>

    <div class="form-row">
      <label for="inv_color">Color</label>
      <input id="inv_color" name="inv_color" type="text" required value="<%= (locals.inv_color || inv_color) %>">
    </div>

    <div class="form-row">
      <label for="classificationList">Classification</label>
      <!-- I pass in the prebuilt <select> so the current classification is selected -->
      <%- classificationSelect %>
    </div>
  </div>

  <div class="form-actions">
    <button class="btn" type="submit" disabled>Update Vehicle</button>
  </div>

  <!-- carry inv_id during update (placed at bottom per instructions) -->
  <input type="hidden" name="inv_id"
    <% if (locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } else if (typeof inv_id !== 'undefined') { %> value="<%= inv_id %>"
    <% } %>
  >
</form>

<p><a href="/inv">Back to Inventory Management</a></p>

<script>
  // Minimal client-side guardrails — same as add form.
  (function(){
    const form = document.querySelector('form.auth-form');
    if (!form) return;
    form.addEventListener('submit', function(e){
      const y = document.getElementById('inv_year');
      const year = parseInt(y.value, 10);
      if (isNaN(year) || year < 1900 || year > 2100) {
        alert('Please enter a valid 4-digit year.');
        e.preventDefault();
        y.focus();
      }
    });
  })();
</script>

<!-- Enable the Update button only if something changes -->
<script src="/js/inv-update.js"></script>
